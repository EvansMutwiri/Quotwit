<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="8dp"
    app:cardCornerRadius="10dp"
    android:padding="10dp"
    android:layout_margin="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="#F8F4FF"
                app:cardElevation="4dp"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_margin="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_content_detail"
                        android:textColor="@color/black"
                        android:fontFamily="@font/jost_regular"
                        android:textSize="22sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:id="@+id/iv_content_detail"
                        android:scaleType="centerCrop"
                        android:src="@drawable/waffles"
                        android:layout_marginTop="6dp"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:contentDescription="DEFAULT" />
                    <TextView
                        android:id="@+id/tv_content_detail_author"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/cardview_dark_background"
                        android:fontFamily="@font/jost_regular"
                        android:textSize="14sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tv_content_detail_time"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/btnstroke"
                        android:fontFamily="monospace"
                        android:textSize="14sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_content_detail_detail"
                android:textSize="22sp"
                android:fontFamily="@font/josh_light"
                android:textColor="@color/black"
                android:layout_marginTop="6dp"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_content_detail_article"
                android:textSize="20sp"
                android:fontFamily="@font/josh_light"
                android:textColor="@color/black"
                android:layout_marginTop="6dp"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </ScrollView>


</androidx.cardview.widget.CardView>