<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ContentDetailsActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:columnCount="2"
        android:background="@color/btnstroke"
        android:rowCount="2">

        <TextView
            android:id="@+id/text_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="SEARCH"/>


    </GridLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    app:cardBackgroundColor="#F8F4FF"
                    app:cardElevation="4dp"
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_margin="6dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_content_detail"
                            android:textColor="@color/black"
                            android:fontFamily="@font/jost_regular"
                            android:textSize="22sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:id="@+id/iv_content_detail"
                            android:scaleType="centerCrop"
                            android:src="@drawable/waffles"
                            android:layout_marginTop="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"/>
                        <TextView
                            android:id="@+id/tv_content_detail_author"
                            android:layout_marginTop="4dp"
                            android:textColor="@color/cardview_dark_background"
                            android:fontFamily="@font/jost_regular"
                            android:textSize="14sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/tv_content_detail_time"
                            android:layout_marginTop="4dp"
                            android:textColor="@color/btnstroke"
                            android:fontFamily="monospace"
                            android:textSize="14sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv_content_detail_detail"
                    android:textSize="22sp"
                    android:fontFamily="@font/josh_light"
                    android:textColor="@color/black"
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_content_detail_article"
                    android:textSize="20sp"
                    android:fontFamily="@font/josh_light"
                    android:textColor="@color/black"
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/share_button"
                        android:drawableLeft="@android:drawable/ic_menu_share"
                        android:text="share"
                        android:elevation="8dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="16dp"
                        android:layout_height="wrap_content"/>

                    <Button
                        android:drawableLeft="@android:drawable/ic_menu_save"
                        android:id="@+id/save_button"
                        android:text="save"
                        android:elevation="8dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>